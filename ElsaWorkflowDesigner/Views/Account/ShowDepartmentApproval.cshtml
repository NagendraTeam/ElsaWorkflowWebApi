@model IEnumerable<ElsaWorkflowDesigner.ViewModel.DepartmentApprovalHistory>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    th {
        padding: 30px;
        padding-left: 50px;
    }

    td {
        padding: 30px;
        padding-left: 50px
    }
</style>

<h2>Approval Notification</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Workflowid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BudgetType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Workflowid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>

            <td>
                @if(item.Status == 1) {
                @Html.Raw("<span style='color:green'>Approved</span>")
                }
                else if(item.Status == 0)
                {
                    <a href="@item.url" target="_blank">Pending..</a>
                }
                else if(item.Status == 2){
                @Html.Raw("<span style='color:red'>Rejected</span>")
                }
            </td>


        </tr>
    }

</table>